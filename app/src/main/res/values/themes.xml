<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ComposeWithBaseStructure" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeWithBaseStructure</item>
    </style>
</resources>